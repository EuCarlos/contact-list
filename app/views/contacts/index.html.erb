<p id="notice"><%= notice %></p>

<h1>Lista de Contatos</h1>

<table class='rwd-table'>
  <thead>
    <tr>
      <th><i class="fa fa-address-book" aria-hidden="true"></i> Nome</th>
      <th><i class="fa fa-phone" aria-hidden="true"></i> Telefone</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contacts.each do |contact| %>
      <tr>
        <td><%= contact.name %></td>
        <td><%= contact.phone %></td>
        <td class="fixed-width-table show-table"><i class="fa fa-eye" aria-hidden="true"></i> <%= link_to 'Mostrar', contact %></td>
        <td class="fixed-width-table edit-table"><i class="fa fa-pencil-square-o" aria-hidden="true"></i> <%= link_to 'Editar', edit_contact_path(contact) %></td>
        <td class="fixed-width-table delete-table"><i class="fa fa-trash"></i> <%= link_to 'Apagar', contact, method: :delete, data: { confirm: 'VocÃª tem certeza?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo contato', new_contact_path, class: 'button-register' %>
